<h1>Edit Bookbag:</h1>
<%= form_tag "/bookbags/#{@bookbag.id}", method: :patch do %>
  <div class="form-group">
    Name: <input type="text" class="form-control" value="<%= @bookbag.name %>" name="name">
  </div>
  <div>
    Image: <input type="text" class="form-control" value="<%= @bookbag.image %>" name="image">
  </div>
  <div>
    Description: <input type="text" class="form-control" value="<%= @bookbag.description %>" name="description">
  </div>
  <div>
    Color: <input type="text" class="form-control" value="<%= @bookbag.price %>" name="color">
  </div>
  <div>
    Price: <input type="text" class="form-control" value="<%= @bookbag.price %>" name="price">
  </div>
  <input type="submit" class="btn btn-default" value="Update bookbag">
<% end %>
